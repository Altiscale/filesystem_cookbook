{
  "id": "some-host-com",
  "ocfs2": {
   "cluster": "some_cluster"
  },
  "filesystems": {
    "data":{
      "vg": "VolGroup00",
      "size": "10g",
      "mount_point": "/data",
      "mount_options": "defaults,noatime,nobarrier"
    },
    "content_prod": {
      "type": "ocfs2",
      "device": "/dev/mpath/content_prod",
      "mount_point": "/data/prod_content",
      "mount_options": "defaults"
    }
  }
}
