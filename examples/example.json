{
    "filesystems": {
        "mnt": {
            "device": "/dev/xvdb",
            "fstype": "ext3",
            "mount": "/mnt"
        },
        "lvmbar1": {
            "vg": "foo",
            "fstype": "xfs",
            "mount": "/mnt/filesystems-testing/lvm-vg-foo-lv-lvmbar1",
            "size": "10%VG"
        },
        "lvmbar2": {
            "vg": "foo",
            "fstype": "ext2",
            "mount": "/mnt/filesystems-testing/lvm-vg-foo-lv-lvmbar2",
            "size": "10%VG",
            "stripes": 2
        },
        "lvmbar3": {
            "vg": "foo",
            "fstype": "ext4",
            "mount": "/mnt/filesystems-testing/lvm-vg-foo-lv-lvmbar3",
            "size": "10%VG",
            "stripes": 2,
            "mirrors": 2
        },
        "nobody777": {
            "file": "/mnt/filesystems-testing/nobody777.file",
            "device": "/dev/loop0",
            "mount": "/mnt/filesystems-testing/nobody777",
            "user": "nobody",
            "group": "nobody",
            "mode": "777",
            "noenable": true,
            "size": "1000"
        },
        "xfsfile": {
            "file": "/mnt/filesystems-testing/xfsfile.file",
            "device": "/dev/loop1",
            "mount": "/mnt/filesystems-testing/xfsfile",
            "fstype": "xfs",
            "options": "noatime,nobarrier",
            "mkfs_options": "-d sunit=128,swidth=2048",
            "noenable": "true",
            "size": "10000"
        },
        "sparsefalse": {
            "file": "/mnt/filesystems-testing/sparsefalse.file",
            "device": "/dev/loop2",
            "mount": "/mnt/filesystems-testing/sparsefalse",
            "noenable": true,
            "sparse": false,
            "size": "1000"
        },
        "nofstab": {
            "file": "/mnt/filesystems-testing/nofstab.file",
            "device": "/dev/loop3",
            "mount": "/mnt/filesystems-testing/nofstab",
            "noenable": true,
            "size": "100"
        },
        "nomount0": {
            "file": "/mnt/filesystems-testing/nomount1-mountmissing.file",
            "device": "/dev/loop4",
            "size": "100"
        },
        "nomount1": {
            "file": "/mnt/filesystems-testing/nomount0-nomounttrue.file",
            "device": "/dev/loop5",
            "mount": "/mnt/filesystems-testing/nomount0-nomounttrue",
            "nomount": true,
            "size": "100"
        },
        "nostorage": {
            "file": "/mnt/filesystems-testing/mkstoragefalse.file",
            "device": "/dev/loop6",
            "mount": "/mnt/filesystems-testing/mkstoragefalse",
            "noenable": true,
            "mkstorage": false,
            "size": "100"
        }
    }
}
